{
  "name": "nodejs-mvc",
  "version": "0.1.0",
  "description": "Build a Node.js MVC web app with Webpack, Babel, TypeScript or ES6, critical CSS",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "rimraf dist && npm run build:watch",
    "build": "rimraf dist && tsc && cross-env NODE_ENV=production node build.js",
    "build:watch": "concurrently \"tsc --watch\" \"webpack serve --config webpack.config.dev.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robisim74/nodejs-mvc"
  },
  "bugs": {
    "url": "https://github.com/robisim74/nodejs-mvc/issues"
  },
  "homepage": "https://github.com/robisim74/nodejs-mvc",
  "keywords": [
    "webpack",
    "babel",
    "es6",
    "typescript",
    "critical css",
    "node",
    "express",
    "MVC"
  ],
  "author": "Roberto Simonetti",
  "license": "MIT",
