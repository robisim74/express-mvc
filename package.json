  },
  "homepage": "https://github.com/robisim74/express-mvc",
  "keywords": [
    "webpack",
    "babel",
    "es6",
    "typescript",
    "critical css",
    "node",
    "express",
    "MVC"
  ],
  "author": "Roberto Simonetti",
  "license": "MIT",
